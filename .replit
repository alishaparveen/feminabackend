modules = ["nodejs-18"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["jq", "openjdk11"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Simple Backend"

[[workflows.workflow]]
name = "Simple Backend"
author = "agent"

[[workflows.workflow.tasks]]
