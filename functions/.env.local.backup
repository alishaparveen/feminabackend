# Firebase Cloud Functions Environment Variables
# Copy this to .env.local for local development
# DO NOT commit real secrets to version control

# Gemini AI API Key
GEMINI_API_KEY=demo_key_replace_with_real

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_demo_replace_with_real
STRIPE_WEBHOOK_SECRET=whsec_demo_replace_with_real

# Application Configuration  
NODE_ENV=development
APP_DOMAIN=localhost:3000
APP_NAME=Femina Platform

# Firebase Emulator Settings (for local development)
FUNCTIONS_EMULATOR=true
FIRESTORE_EMULATOR_HOST=localhost:8080
FIREBASE_AUTH_EMULATOR_HOST=localhost:9099
FIREBASE_STORAGE_EMULATOR_HOST=localhost:9199

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=10485760
MAX_FILES_PER_REQUEST=5