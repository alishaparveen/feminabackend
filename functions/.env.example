# Firebase Cloud Functions Environment Variables
# Copy this to .env.local for local development
# DO NOT commit real secrets to version control

# Gemini AI API Key
GEMINI_API_KEY=your_gemini_api_key_here

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_test_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Application Configuration  
NODE_ENV=development
APP_DOMAIN=localhost:3000
APP_NAME=Femina Platform

# Firebase Emulator Settings (for local development)
FUNCTIONS_EMULATOR=true
FIRESTORE_EMULATOR_HOST=localhost:8080
FIREBASE_AUTH_EMULATOR_HOST=localhost:9099
FIREBASE_STORAGE_EMULATOR_HOST=localhost:9199

# Optional: Third-party integrations
SENDGRID_API_KEY=your_sendgrid_key_for_emails
SLACK_WEBHOOK_URL=your_slack_webhook_for_admin_notifications

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=10485760
MAX_FILES_PER_REQUEST=5